define
	circle:
		fill: '#fff'
		r: 5
		'stroke-width': 0

	circle_hover:
		r: 7

	crossCircle:
		fill: '#f93'
		r: 10
		stroke: '#fff'
		'stroke-width': 2

	line:
		stroke: '#fff'
		'stroke-width': 2

	boundingBox:
		opacity: 0.5
		stroke: '#fff'
		'stroke-dasharray': '- '
		'stroke-linejoin': 'round'
		'stroke-width': 2

	button:
		fill: '#000'
		stroke: '#fff'
		'stroke-width': 2
